<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.8"
    android:background="@drawable/shape_gray_20"
    android:orientation="vertical"
    android:padding="@dimen/dimens_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_alipay_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_alipay"
                android:layout_width="@dimen/dimens_45"
                android:layout_height="@dimen/dimens_45"
                android:src="@mipmap/alipay_scan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="扫一扫"
                android:textColor="@color/color_black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_alipay_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_30"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimens_45"
                android:layout_height="@dimen/dimens_45"
                android:src="@mipmap/alipay_pay" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="付款码"
                android:textColor="@color/color_black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_wx_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_30"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimens_45"
                android:layout_height="@dimen/dimens_45"
                android:src="@mipmap/wx_scan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="扫一扫"
                android:textColor="@color/color_black" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_wx_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_30"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimens_45"
                android:layout_height="@dimen/dimens_45"
                android:src="@mipmap/wx_pay" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="付款码"
                android:textColor="@color/color_black" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimens_45"
                android:layout_height="@dimen/dimens_45"
                android:src="@mipmap/desktop_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="美莱云"
                android:textColor="@color/color_black" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>